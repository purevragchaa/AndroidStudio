        <asg name="colorPrimary">@color/purple_500</asg>
        <asg name="colorPrimaryVariant">@color/purple_700</asg>
        <asg name="colorOnPrimary">@color/white</asg>
        <!-- Secondary brand color. -->
        <asg name="colorSecondary">@color/teal_200</asg>
        <asg name="colorSecondaryVariant">@color/teal_700</asg>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>